        <ImageView
            android:id="@+id/iv_center"
            android:layout_width="10dp"
            android:layout_height="46dp"
            app:layout_constraintStart_toStartOf="@+id/resistencia"
            app:layout_constraintEnd_toEndOf="@id/resistencia"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/resistencia"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/iv_i_1"
            android:layout_width="10dp"
            android:layout_height="46dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_center"
            app:layout_constraintTop_toTopOf="@id/resistencia"
            app:layout_constraintBottom_toBottomOf="@+id/resistencia"
            android:background="@color/black"
            android:contentDescription="0"/>

        <ImageView
            android:id="@+id/iv_i_2"
            android:layout_width="10dp"
            android:layout_height="46dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_i_1"
            app:layout_constraintTop_toTopOf="@id/resistencia"
            app:layout_constraintBottom_toBottomOf="@+id/resistencia"
            app:srcCompat="@android:color/transparent" />

        <ImageView
            android:id="@+id/iv_i_3"
            android:layout_width="10dp"
            android:layout_height="46dp"
            app:layout_constraintEnd_toStartOf="@+id/iv_i_2"
            app:layout_constraintTop_toTopOf="@id/resistencia"
            app:layout_constraintBottom_toBottomOf="@+id/resistencia"
            android:background="@color/saddlebrown"
            android:contentDescription="1"/>

        <ImageView
            android:id="@+id/iv_d_1"
            android:layout_width="10dp"
            android:layout_height="46dp"
            app:layout_constraintStart_toEndOf="@id/iv_center"
            app:layout_constraintTop_toTopOf="@id/resistencia"
